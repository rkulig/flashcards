---
import Layout from "../layouts/Layout.astro";
import AuthPage from "../components/auth/AuthPage";
---

<Layout title="Authentication - Flashcards">
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <div class="text-center mb-8">
          <h1 class="text-2xl font-bold text-gray-900">Welcome to Flashcards</h1>
          <p class="text-gray-600 mt-2">Sign in or sign up to continue</p>
        </div>

        <!-- React component for interactivity -->
        <AuthPage client:load />
      </div>
    </div>
  </main>
</Layout>
